<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>ProductInfo</servlet-name>
        <servlet-class>com.xzf.servlet.ProductInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductInfo</servlet-name>
        <url-pattern>/product_info</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClearHistory</servlet-name>
        <servlet-class>com.xzf.servlet.ClearHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearHistory</servlet-name>
        <url-pattern>/clear_history</url-pattern>
    </servlet-mapping>

</web-app>